{
  "name": "thw-blog",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "react-scripts": "1.0.10",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.4",
    "file-loader": "^0.11.2",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.29.0",
    "mkdirp": "^0.5.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.5.1",
    "npm-run-all": "^4.0.2"
  },
  "scripts": {
    "clean": "rimraf dist && mkdirp dist",
    "copy:fonts": "cpx \"./src/fonts/*.ttf\" ./dist/fonts",
    "packypacky": "webpack",
    "build": "npm-run-all clean --parallel copy:* packypacky",
    "start": "node ./dist/backend.js",
    "dev-server": "webpack-dev-server --host=0.0.0.0 --port=3000 --content-base dist/ --history-api-fallback",

    "start-old": "react-scripts start",
    "build-old": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  }
}
