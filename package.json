{
  "watch": {
    "build-start": {
      "patterns": ["src", "public"],
      "extensions": "html,js,jsx,css",
      "quiet": false
    }
  },
  "name": "thw-blog",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.16.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-remarkable": "^1.1.1",
    "redux": "^3.7.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.4",
    "file-loader": "^0.11.2",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.29.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.0.2",
    "npm-watch": "^0.2.0",
    "react-scripts": "1.0.10",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.5.1"
  },
  "scripts": {
    "clean": "rimraf dist && mkdirp dist",
    "copy:fonts": "cpx \"./src/fonts/*.ttf\" ./dist/fonts",
    "copy:posts": "cpx \"./src/posts/*.md\" ./dist/posts",
    "packypacky": "webpack",
    "build": "npm-run-all clean --parallel copy:* packypacky",
    "start": "node ./dist/server.js",
    "build-start": "npm-run-all build start",
    "watch-build-start": "npm-watch build-start",
    "dev-server": "webpack-dev-server --host=0.0.0.0 --port=3000 --content-base dist/ --history-api-fallback",
    "start-old": "react-scripts start",
    "build-old": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  }
}
